@model AspNet.Curriculos.Modelos.Formacao

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Experiencia</h4>
        </div>
        <form asp-action="IncluirFormacao">
            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Instituicao" class="control-label"></label>
                    <input asp-for="Instituicao" class="form-control" />
                    <span asp-validation-for="Instituicao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AreaDeEstudo" class="control-label"></label>
                    <input asp-for="AreaDeEstudo" class="form-control" />
                    <span asp-validation-for="AreaDeEstudo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataEntrada" class="control-label"></label>
                    <input asp-for="DataEntrada" class="form-control" type="date" />
                    <span asp-validation-for="DataEntrada" class="glyphicon glyphicon-calendar"></span><!-- class="text-danger" -->
                </div>
                <div class="form-group">
                    <label asp-for="DataSaida" class="control-label"></label>
                    <input asp-for="DataSaida" class="form-control" />
                    <span asp-validation-for="DataSaida" class="glyphicon glyphicon-calendar"></span> <!-- class="text-danger" -->
                </div>
                <input type="hidden" name="CandidatoId" id="FormacaoCandidatoId" value="@Model.CandidatoId" />
            </div>
            <div class="form-group modal-footer">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

